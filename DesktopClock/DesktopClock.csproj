<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <StartupObject>DesktopClock.App</StartupObject>
    <Authors>Shady Nawara</Authors>
    <Description>simple clock on the desktop</Description>
    <PackageProjectUrl>https://github.com/ShadyNawara/DesktopClock</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ShadyNawara/DesktopClock</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="WpfScreenHelper" Version="1.0.0" />
  </ItemGroup>

</Project>
